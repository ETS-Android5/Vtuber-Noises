<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg4"
        android:backgroundTintMode="src_atop"
        android:backgroundTint="#c9000000"
        android:orientation="vertical">
        <LinearLayout
            android:background="@color/darkblvck"
            android:orientation="horizontal"
            android:paddingVertical="9dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/menu_btn"
                android:layout_gravity="center_vertical"
                android:src="@drawable/abt_menu"
                android:layout_width="35dp"
                android:layout_height="35dp"/>

            <TextView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:id="@+id/AppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/alarm_btn"
                android:layout_gravity="center_vertical"
                android:src="@drawable/abt_alarm"
                android:layout_width="33dp"
                android:layout_height="33dp"/>
            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/PressGura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/press_gura"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            android:visibility="visible"
            tools:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:visibility="visible" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="379dp"
            app:srcCompat="@drawable/gura0" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>