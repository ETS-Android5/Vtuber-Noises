<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="Settings Menu"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp" />

        <LinearLayout
            android:background="@drawable/bg1"
            android:backgroundTint="#C9000000"
            android:backgroundTintMode="src_atop"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <TableLayout
                        android:id="@+id/tableLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activate Clicker"
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activate Popup Text"
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "A"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "Ehh"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "Ahh"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch5"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "Ara Ara"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch6"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "NOOOOOO!"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch7"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activate &quot;Hey that's pretty good&quot;"
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch8"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Activate &quot;Lewd 'A'&quot;"
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch9"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "Wake Up"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "OK?"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch11"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>

                        <TableRow
                            android:paddingHorizontal="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text='Activate "JA JANG"'
                                android:textColor="#f1f1f1"
                                android:textSize="20sp" />

                            <Switch
                                android:id="@+id/switch12"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </TableRow>


                    </TableLayout>

                </LinearLayout>
            </ScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/buttonR"
                    app:cardCornerRadius="17.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/button"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#f1f1f1"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:text="Reset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>


                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>


                <androidx.cardview.widget.CardView
                    android:id="@+id/buttonS"
                    app:cardCornerRadius="17.5dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/button"
                    android:layout_width="match_parent"
                    android:layout_height="35dp">
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#f1f1f1"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:text="Save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>