<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CharacterSettings">
    <LinearLayout
        android:background="@color/darkblvck"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Character"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:textAlignment="center"
            android:textColor="@color/porcelain"
            android:textSize="25dp" />
        <RadioGroup
            android:id="@+id/character_types"
            android:layout_weight="1"
            android:paddingHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/gura_img_row">
                    <ImageView
                        android:padding="10dp"
                        android:src="@drawable/gura2"
                        android:layout_width="135dp"
                        android:layout_height="135dp"/>
                    <RadioButton
                        android:id="@+id/gura_img"
                        android:layout_gravity="center_vertical"
                        android:textSize="17dp"
                        android:buttonTint="@color/colorAccent"
                        android:text="Gura"
                        android:textColor="@color/colorAccent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </TableRow>
                <TableRow
                    android:id="@+id/gura2_img_row">
                    <ImageView
                        android:padding="10dp"
                        android:src="@drawable/gura"
                        android:layout_width="135dp"
                        android:layout_height="135dp"/>
                    <RadioButton
                        android:id="@+id/gura2_img"
                        android:layout_gravity="center_vertical"
                        android:textSize="17dp"
                        android:buttonTint="@color/colorAccent"
                        android:text="Gura 2"
                        android:textColor="@color/colorAccent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </TableRow>
            </TableLayout>


        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/buttonR"
                app:cardCornerRadius="17.5dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/button"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#f1f1f1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="Reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>


            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                android:id="@+id/buttonS"
                app:cardCornerRadius="17.5dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/button"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:layout_gravity="center"
                    android:textColor="#f1f1f1"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="Save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </androidx.cardview.widget.CardView>

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>